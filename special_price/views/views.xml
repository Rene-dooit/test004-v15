
<record model="ir.ui.view" id="sale_order_view_inherit">
    <field name="name">sale.order.view.inherit1</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="after">
            <field name="special_price"/>
        </xpath>
    </field>
    <field name="unit_price" colors="red:special_price=True;black:special_price=False" />
</record>
   


    <record model="ir.ui.view" id="special_price.list">
      <field name="name">special_price list</field>
      <field name="model">special_price.special_price</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="special_price.action_window">
      <field name="name">special_price window</field>
      <field name="res_model">special_price.special_price</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="special_price.action_server">
      <field name="name">special_price server</field>
      <field name="model_id" ref="model_special_price_special_price"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="special_price" id="special_price.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="special_price.menu_1" parent="special_price.menu_root"/>
    <menuitem name="Menu 2" id="special_price.menu_2" parent="special_price.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="special_price.menu_1_list" parent="special_price.menu_1"
              action="special_price.action_window"/>
    <menuitem name="Server to list" id="special_price" parent="special_price.menu_2"
              action="special_price.action_server"/>

  </data>
</odoo>